generator client {
  provider = "prisma-client-js"
//  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OPERATOR
  SUPERVISOR
}

model User {
  id        String      @id @default(cuid())
  //cpf unico
  cpf       String   @unique
  //nome
  name      String
  //cargo
  role      Role     @default(OPERATOR)
  //senha
  password  String
}
