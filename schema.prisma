generator client {
  provider = "prisma-client-js"
//  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  //id unico e aleatorio
  id        String   @id @default(cuid())
  //email unico
  email     String   @unique
  name      String
  //idade
  age       Int
  role      String
  //data e hora de criação do usuario
  createdAt DateTime @default(now())
  //data e hora de atualização do usuario
  updatedAt DateTime @updatedAt
}
//para gerar o client do prisma, rode o comando: npx prisma generate
